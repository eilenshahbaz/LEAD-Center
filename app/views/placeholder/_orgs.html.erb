<h3 class="matched"> <%= @showAllOrgs ? 'Take the quiz to get matched with orgs!' : 'Your matched organizations' %> </h3>
<div>
<% if @organizations%>
  <% @organizations.each_with_index do |org, i| %>
  <!-- Modal -->
    <div class="modal fade" id="<%= 'modal-' + i.to_s %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><%= org.name %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <%= org.description %>.
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
  <div class='container'>
    <div class='orgs'>
      <% @organizations.each_with_index do |org, i| %>
        <div class="snip1104 blue">
          <%= image_tag(org.imageUrl) %>
          <figcaption>
            <h4><%= org.name %></h2>
          </figcaption>
          <div class='fig-holder'>
            <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#<%= 'modal-' + i.to_s %>">Learn More</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>